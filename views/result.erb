<% if @player_choice == "Rock" %>
<h2>You played Rock!</h2>
<% elsif @player_choice == "Paper" %>
<h2>You played Paper!</h2>
<% elsif @player_choice == "Scissors" %>
<h2>You played Scissors!</h2>
<% end %>

<% if @computer_choice == "Rock" %>
<h2>Computer played Rock!</h2>
<% elsif @computer_choice == "Paper" %>
<h2>Computer played Paper!</h2>
<% elsif @computer_choice == "Scissors" %>
<h2>Computer played Scissors!</h2>
<% end %>

<h2>You win! (づ｡◕‿‿◕｡)づ</h2>
<form action="/nextgame" method="post">
  <input type="submit" value="Next Game">
</form>
